load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")

package(default_visibility = ["//visibility:public"])

cmake(
    name = "transmission",
    lib_source = "@transmission//:all",
    generate_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DENABLE_CLI=ON",
        "-DENABLE_DAEMON=ON",
        "-DENABLE_GTK=OFF",
        "-DENABLE_MAC=OFF",
        "-DENABLE_QT=OFF",
        "-DENABLE_TESTS=OFF",
        "-DENABLE_UTILS=ON",
        "-DREBUILD_WEB=OFF",
        # Only system openssl can be used.  Attempting to provide deps results
        # in wrong linking. This should be fixed but I'm not in it for now.
        "-DWITH_CRYPTO=openssl",
        "-DWITH_OPENSSL=ON",
        # Use the library sources provided in the third-party repositories.
        "-DUSE_SYSTEM_DHT=OFF",
        "-DUSE_SYSTEM_EVENT2=OFF",
        "-DUSE_SYSTEM_NATPMP=OFF",
        "-DCURL_PREFER_STATIC_LIB=ON",
        "-DDEFLATE_PREFER_STATIC_LIB=ON",
        # Install libtransmission.a. This is necessary for this build rule to
        # succeed.
        "-DINSTALL_LIB=TRUE",
        # Try to turn off AVX, since it seems that the MUSL assembler does not
        # support it.
        "-DUSE_AVX=OFF",
        # Concession to broken build system.
        "-DUSE_SYSTEM_DEFLATE=OFF",
    ],
    build_args = [
        "--verbose",
        #"--parallel", "3",
    ],
    linkopts = [
        "-lstdc++",
    ],
    out_static_libs = ["libtransmission.a"],
    out_binaries = [
        "transmission-cli",
        "transmission-daemon",
    ],
    deps = [
        # libcurl is not hermetic. :(
        "@curl//:curl",
        "@openssl//:ssl",
    ],
)

filegroup(
    name = "transmission-cli",
    srcs = [":transmission"],
    output_group = "transmission-cli",
)

filegroup(
    name = "transmission-daemon",
    srcs = [":transmission"],
    output_group = "transmission-daemon",
)

genrule(
    name = "testcli",
    outs = ["report-cli.txt"],
    tools = [
        ":transmission-cli",
    ],
    cmd = """
      $(location :transmission-cli) --help > $(OUTS)
    """
)

genrule(
    name = "testdaemon",
    outs = ["report-daemon.txt"],
    tools = [
        ":transmission-daemon",
    ],
    cmd = """
      $(location :transmission-daemon) --help > $(OUTS)
    """
)
